<body>
   
    @RenderBody()
    <script src="https://code.jquery.com/jquery-3.7.1.js"
            integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
            crossorigin="anonymous">
    </script>
    <script src="main/assets/js/script.js"></script>
    <script src="main/assets/libs/swiperjs/swiper-bundle.min.js"></script>
   
    <script>
        // Add event listener to each banner item
        document.querySelectorAll('.banner-item').forEach(item => {
            item.addEventListener('mouseover', () => {
                // Hide all banner boxes
                document.querySelectorAll('.banner-box').forEach(box => {
                    box.style.display = 'none';
                    box.parentElement.classList.remove('active'); // Remove active class
                    box.parentElement.style.width = '300px'; // Set width to default
                });
                // Show the current banner box and set it to active
                item.querySelector('.banner-box').style.display = 'block';
                item.classList.add('active'); // Add active class to current item
                item.style.width = '702px'; // Set width to active
            });

            item.addEventListener('mouseout', () => {
                // Hide the current banner box if it's not the default one
                if (!item.classList.contains('default')) {
                    item.querySelector('.banner-box').style.display = 'none';
                    item.classList.remove('active'); // Remove active class
                    item.style.width = '300px'; // Set width back to default
                }
            });
        });
    </script>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
