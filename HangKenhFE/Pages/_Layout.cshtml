        $(document).on('click', '#nav_menu', function () {
            $('#nav_menu_content').collapse('toggle');
            $('#overlay').toggleClass('menu-mobile-show')
            $('body').toggleClass('overflow-hidden')

        });
    </script>
    @RenderSection("Scripts", required: false)

